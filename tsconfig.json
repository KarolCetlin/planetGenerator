{
  "compileOnSave": true,

  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "noImplicitAny": false,
    "removeComments": true,
    "lib": [
      "dom",
      "es2015",
      "dom.iterable",
      "es5"
    ]
  },

  "exclude": [
    "./node_modules",
    "./src/scripts/Vendors"
  ]
}

